@model WebUI.Models.Account.ForgotPassword
@using (Html.BeginRouteForm("Account_ForgotPassword_POST", FormMethod.Post, new { @class = "form-vertical forget-form" }))
{ 
    @Html.AntiForgeryToken()
    <h3 class="form-title">Reset Password</h3>
    <p>Please enter your email address to reset your password.</p>
    <div class="control-group">
        <div class="controls">
            <div class="input-icon left">
                @Metro.Icon("icon-envelope")
                @Html.TextBoxFor(x => x.EmailAddress, new { @class = "m-wrap placeholder-no-fix", placeholder = "Email" })
            </div>
            @Html.ValidationMessageFor(x => x.EmailAddress, "", new { @class = "help-inline help-small no-left-padding" })
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green pull-right">
            Reset @Metro.Icon("m-icon-swapright m-icon-white")
        </button>
    </div>
}
